@page "{addId?}"
@model CartModel
@{
  ViewData["Title"] = "Carrito";
}
<h2>Tu carrito</h2>
<table class="table">
  <thead>
    <tr>
      <th>Producto</th><th>Cantidad</th><th>Precio unidad</th><th>Sub-total</th><th></th>
    </tr>
  </thead>
  <tbody>
  @foreach (var item in Model.Items)
  {
    <tr>
      <td>@item.Product.Name</td>
      <td>@item.Quantity</td>
      <td>$@item.Product.Price</td>
      <td>$@item.Subtotal</td>
      <td>
        <a asp-page-handler="Remove" asp-route-id="@item.Product.Id"
           class="btn btn-sm btn-danger">‚ùå</a>
      </td>
    </tr>
  }
  </tbody>
</table>
<div class="d-flex justify-content-end">
  <h4>Total: $@Model.Total</h4>
</div>
<a asp-page="/Orders/History" class="btn btn-primary mt-3">
  Finalizar compra
</a>
